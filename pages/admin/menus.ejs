<% if(typeof action !=='undefined' && action==='edit' ){ %>
    <div class="alert alert-success">Menü Öğesi güncellendi</div>
    <% } %>

        <% if(typeof action !=='undefined' && action==='delete' ){ %>
            <div class="alert alert-danger">Menü Öğesi silindi</div>
            <% } %>

                <% if(_data.menuItems.length> 0){ %>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Restaurant Id</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% _data.menuItems.forEach(function(menuItems) { %>
                                <tr>
                                    <td>
                                        <%= menuItems.restaurant_id %>
                                    </td>
                                    <td>
                                        <%= menuItems.item_name %>
                                    </td>
                                    <td>
                                        <%= menuItems.item_price %> TL
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm mr-2"
                                            href="/admin/menus/<%= menuItems.id %>">Edit</a>
                                        <form action='/admin/delete-menu' method="post">
                                            <input type="hidden" name="menuItemsid" value="<%= menuItems.id %>">
                                            <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                        </form>
                                    </td>

                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <div class="alert alert-warning">Menü öğesi bulunamadı.</div>
                        <% } %>