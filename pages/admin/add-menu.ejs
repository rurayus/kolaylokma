<div class="general-wrapper">
    <form action="/admin/add-menu" method="post" autocomplete="off">
        <h2>Yemek Ekle</h2>

        <div class="input-box">
            <label for="restaurant">
                <h3>Restorant</h3>
            </label>
            <input type="hidden" name="restaurantid" id="restaurantid" value="<%= _data.restaurants.length == 1 ? _data.restaurants[0].id : ''%>" required>
            <select class="small" id="restaurant" name="restaurant" type="text" placeholder="Restorant" required <%=_data.restaurants.length==1 ? 'disabled' : '' %>>
                <option disabled selected value>Seçiniz</option>
                <% _data.restaurants.forEach(rest=> { %>
                <option value="<%= rest.id %>" <% if (_data.restaurants.length==1 ?
                        rest.id===_data.restaurants[0].id : false) { %> selected <% } %>>
                    <%= rest.name %>
                </option>
                <% }); %>
            </select>
        </div>

        <div class="input-box">
            <label for="kategori">
                <h3>Kategori</h3>
            </label>
            <select class="small" id="kategori" name="kategori" type="text" placeholder="Kategori" required>
                <option disabled selected value>Seçiniz</option>
                <% _data.kategoriler.forEach(kategori=> { %>
                <option value="<%= kategori %>">
                    <%= kategori %>
                </option>
                <% }); %>
            </select>
        </div>

        <div class="input-box">
            <label for="name">
                <h3>Ürün İsmi</h3>
            </label>
            <input class="small" id="name" name="name" type="text" placeholder="Örn: Lahmacun" required>
        </div>

        <div class="input-box">
            <label for="name">
                <h3>Fiyat</h3>
            </label>
            <div style="display: flex; justify-content: space-between; align-items: center; gap: 5px;">
                <input class="small" id="price" name="price" type="number" placeholder="Fiyat" required>
                TL
            </div>
        </div>

        <button type="submit" class="btn">Ekle</button>

    </form>
</div>

<%- include('../../scripts/admin/add-menu.ejs') %>